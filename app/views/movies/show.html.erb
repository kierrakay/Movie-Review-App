<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
            
              <%# <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title % >< /td>
              </ tr> %>
              <%# <tr>
                <td><strong>Description:</strong></td>
                <td colspan="2"><%= @movie.description % ></ td> %>
               
              </tr>
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write A Review", new_movie_review_path(@movie), class: "btn btn-danger"  %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
      <h1 class="review_title"><%= @movie.title %></h1>
      <p><%= @movie.description %></p>

         <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
        
          <% @reviews.each do |review| %>
       
            <div class="reviews">
             <%# < p > Rating: < % = review.rating % > stars closing </p > %>
             <% review.rating.to_i.times do  %>
            <span class="glyphicon glyphicon-star"></span>
            <% end %>
            <% review.blank_stars.to_i.times do %>
           <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
              <%# Bootstrap has built in glyphicons that can help us accomplish this.%>

            <h3><p>"<%= review.comment %>"</p></h3>
              <%# <p><%= review.user.username %>  
              <h5>Posted by: <%= link_to "#{review.user.username}", movie_review_path(@movie, review) %></h5>
             <%# <%= link_to '- Edit', edit_movie_review_path(@movie, review) %> 
             <%# above takes us straight to edit form %>
              <%# <%= link_to 'edit', movie_review_path(@movie, review) %> 
           <%# above takes us to reviews nested show page %>
      </div>
  
      <% end %>
      <% end %>
    </div>
  </div>



<%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-info"  %>
